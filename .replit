modules = ["nodejs-20", "web"]
run = "npm run dev"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "npm start -- -H 0.0.0.0 -p 3000"]
build = ["sh", "-c", "npm run build"]
deploymentTarget = "cloudrun"

[workflows]
runButton = "Development Server"

[[workflows.workflow]]
name = "Development Server"
author = 44012261
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 3002
externalPort = 3002
